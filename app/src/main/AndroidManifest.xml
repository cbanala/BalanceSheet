<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="company.codeforce.org.balancesheet">

    <application
        android:name=".base.BalanceSheetApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_balance_sheet"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activities.BalanceSheetActivity"/>
        <activity android:name=".view.activities.FirstPayPeriodActivity"/>
        <activity android:name=".view.activities.SupportActivity"/>
        <activity android:name=".view.activities.SecondPayPeriodActivity"/>
        <activity android:name=".view.activities.VendorHoursActivity"/>
        <activity android:name=".view.activities.OtherDeductionsActivity"/>

    </application>

</manifest>